<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <h4>Correct #'s:</h4>
      <div class="well">
        <div class="correct">
          {{#if correctGuess}}
            {{#each correctGuess}}
              <!-- <p>Test</p> -->
              <p>{{correctGuess}}</p>
            {{/each}}
          {{/if}}
          <!-- <p>Patrick</p>
          <p>Food</p> -->
        </div>
      </div>
    </div>
    <div class="col-sm-8 text-left">
      <div class="time">
        <p>TIME REMAINING:</p>
      </div>
      <div class="countdown">
        <p>1:00</p>
      </div>
      <div class="imgSection">
        <div class="imgContent">
          {{#each model as |image|}}
            <img class="gifImage " src= {{image.url}}>
          {{/each}}
        </div>
      </div>
      <div class="score-hint-info">
        <div class="score-info">
          <p>My Score: 2</p>
        </div>
      </div>
      <div class="score-hint-info">
        {{#each model as |tag|}}
          <p>Hint: Find {{tag.tagCount}} hashtag(s)!</p>
        {{/each}}
      </div>

      <div class="answerBox">
        {{input type="text" value=guess class="form-control" placeholder="Type your guess!" autofocus="autofocus"}}
        <div class="submitBtn">
          <button class="btn btn-success" {{action 'sendGuess'}} disabled= {{isDisabled}}>Submit</button>
        </div>
      </div>
    </div>
    <div class="col-sm-2 sidenav">
      <h4>Incorrect #'s:</h4>
      <div class="well">
        <div class="incorrect">
          {{#if incorrectGuess}}
            {{#each incorrectGuess}}
              <p>{{incorrectGuess}}</p>
              <br>
            {{/each}}
          {{/if}}
          <!-- <p>{{incorrectGuess}}</p> -->
        </div>
      </div>
    </div>
  </div>
</div>
